{
  "name": "nhs-visit-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "format": "prettier --write '{pages,pageTests,src}/**/*.{js,css,md,yml}'",
    "format:check": "prettier --check '{pages,pageTests,src}/**/*.{js,css,md,yml}'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "npm run format:check && jest",
    "build": "next build",
    "start": "next start -p $PORT"
  },
  "dependencies": {
    "@zeit/next-sass": "^1.0.1",
    "classnames": "^2.2.6",
    "dotenv-load": "^2.0.0",
    "google-libphonenumber": "^3.2.8",
    "isomorphic-unfetch": "^3.0.0",
    "moment": "^2.24.0",
    "nanoid": "^3.1.3",
    "next": "9.3.5",
    "next-env": "^1.1.1",
    "nhsuk-frontend": "^3.0.4",
    "node-sass": "^4.13.1",
    "notifications-node-client": "^4.7.3",
    "pg-promise": "^10.5.0",
    "react": "16.13.1",
    "react-dom": "16.13.1"
  },
  "devDependencies": {
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "husky": "^4.2.5",
    "jest": "^25.3.0",
    "jest-css-modules-transform": "^4.0.0",
    "lint-staged": "^10.1.3",
    "prettier": "^2.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md,yml}": [
      "prettier --write"
    ]
  }
}
